<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:minHeight="50dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <com.breadwallet.presenter.customviews.BaseTextView
        android:id="@+id/app_about_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:textSize="15sp"
        android:textColor="@color/black_333333"
        android:layout_gravity="center_vertical"
        android:text="title"/>

    <com.breadwallet.presenter.customviews.BaseTextView
        android:id="@+id/app_about_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textSize="12sp"
        android:textColor="@color/black_888888"
        android:layout_toLeftOf="@+id/app_about_item_share"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <com.breadwallet.presenter.customviews.BaseTextView
        android:id="@+id/app_about_item_share"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ic_app_about_share"/>


</LinearLayout>
