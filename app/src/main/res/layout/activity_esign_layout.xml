<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/toolbar_back_arrow" />

        <com.breadwallet.presenter.customviews.BaseTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="16dp"
            android:text="e-Sign"
            android:textColor="@color/black_333333"
            android:textSize="20sp" />
        
        <com.breadwallet.presenter.customviews.BaseTextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/ic_esign_history"/>
    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/esign_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent">
        <com.breadwallet.presenter.customviews.BaseTextView
            android:id="@+id/doc_to_sign_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="25dp"
            android:textColor="@color/black"
            android:text="Doc to be signed"/>

        <com.breadwallet.presenter.customviews.BaseTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/doc_to_sign_title"
            app:layout_constraintBottom_toBottomOf="@+id/doc_to_sign_title"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="#ff3365"
            android:layout_marginRight="25dp"
            android:text="Paste"/>

        <com.breadwallet.presenter.customviews.BREdit
            android:id="@+id/doc_to_sign_content"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/doc_to_sign_title"
            android:layout_marginTop="20dp"
            android:layout_height="186dp"
            android:background="#f7f8fb"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:gravity="top"
            android:padding="16dp"/>

        <com.breadwallet.presenter.customviews.BRButton
            android:id="@+id/sign_btn"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginBottom="100dp"
            android:layout_marginEnd="@dimen/bread_margin"
            android:layout_marginStart="@dimen/bread_margin"
            android:padding="10dp"
            android:text="Sign"
            android:textSize="18sp"
            app:buttonType="6"
            android:textColor="#ff3365"
            app:isBreadButton="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/esign_check_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            app:layout_constraintTop_toBottomOf="@+id/sign_btn"
            android:layout_marginTop="10dp"
            android:button="@drawable/esign_check_selector"
            android:text="By click Sign, you acknoledge that you are e-signing this doc using your personal signature."/>
        
    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent">

        <com.breadwallet.presenter.customviews.BaseTextView
            android:id="@+id/sign_success_folder"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/ic_sign_folder"/>

        <com.breadwallet.presenter.customviews.BaseTextView
            android:id="@+id/success_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#222222"
            app:layout_constraintTop_toBottomOf="@+id/sign_success_folder"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Signed successfully"/>

        <com.breadwallet.presenter.customviews.BaseTextView
            android:id="@+id/success_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="12dp"
            app:layout_constraintRight_toLeftOf="@+id/success_text"
            app:layout_constraintTop_toTopOf="@+id/success_text"
            app:layout_constraintBottom_toBottomOf="@+id/success_text"
            android:background="@drawable/ic_sign_sucess"/>

        <com.breadwallet.presenter.customviews.BaseTextView
            android:id="@+id/sign_result"
            android:layout_width="293dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/success_text"
            android:layout_marginTop="24dp"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"/>


        <com.breadwallet.presenter.customviews.BRButton
            android:id="@+id/copy_btn"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="@dimen/bread_margin"
            android:layout_marginStart="@dimen/bread_margin"
            android:padding="10dp"
            android:text="Copy"
            android:textSize="18sp"
            app:buttonType="6"
            android:textColor="#ff3365"
            app:isBreadButton="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
