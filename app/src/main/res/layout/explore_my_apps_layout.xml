<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary_background"
    android:maxHeight="60dp">

    <com.breadwallet.presenter.customviews.BaseTextView
        android:id="@+id/explore_item_delete_tv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:background="@drawable/ic_explore_delete"/>

    <com.breadwallet.presenter.customviews.RoundImageView
        android:id="@+id/explore_item_logo_tv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/explore_item_delete_tv"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/ic_launcher"/>

    <com.breadwallet.presenter.customviews.BaseTextView
        android:id="@+id/explore_item_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/explore_item_logo_tv"
        app:layout_constraintTop_toTopOf="@+id/explore_item_logo_tv"
        android:layout_marginLeft="16dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="title"/>

    <com.breadwallet.presenter.customviews.BaseTextView
        android:id="@+id/explore_item_developer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developer: Chris Thomas"
        android:layout_marginLeft="16dp"
        android:textSize="11sp"
        android:textColor="@color/black_888888"
        app:layout_constraintLeft_toRightOf="@+id/explore_item_logo_tv"
        app:layout_constraintBottom_toBottomOf="@+id/explore_item_logo_tv"/>

    <com.breadwallet.presenter.customviews.BaseTextView
        android:id="@+id/explore_item_touch_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="20dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/ic_menu_drag_icon"/>

    <com.breadwallet.presenter.customviews.BaseTextView
        android:id="@+id/explore_item_about_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/ic_explore_about"/>

</android.support.constraint.ConstraintLayout>
