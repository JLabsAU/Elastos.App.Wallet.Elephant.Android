<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/primary_background"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:maxHeight="60dp">

    <com.breadwallet.presenter.customviews.BaseTextView
        android:id="@+id/explore_item_delete_tv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_explore_delete"/>

    <com.breadwallet.presenter.customviews.RoundImageView
        android:id="@+id/explore_item_logo_tv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/explore_item_delete_tv"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/ic_launcher"/>

    <com.breadwallet.presenter.customviews.BaseTextView
        android:id="@+id/explore_item_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/explore_item_logo_tv"
        android:layout_marginLeft="16dp"
        android:textSize="15sp"
        android:textColor="@color/black"/>

    <com.breadwallet.presenter.customviews.BaseTextView
        android:id="@+id/explore_item_developer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/explore_item_logo_tv"
        android:textSize="11sp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/explore_item_title_tv"
        android:textColor="@color/black_888888" />

    <com.breadwallet.presenter.customviews.BaseTextView
        android:id="@+id/explore_item_touch_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_menu_drag_icon"/>

    <com.breadwallet.presenter.customviews.BaseTextView
        android:id="@+id/explore_item_about_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_explore_about"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ebebeb"
        android:layout_marginLeft="76dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
