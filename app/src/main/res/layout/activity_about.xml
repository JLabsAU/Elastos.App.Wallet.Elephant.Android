<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_intro_set_pit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.breadwallet.presenter.activities.settings.AboutActivity">


    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginStart="2dp"
        android:background="@drawable/ic_arrow_left"
        app:layout_constraintStart_toStartOf="@id/ela_text"
        app:layout_constraintTop_toTopOf="@id/title" />


    <com.breadwallet.presenter.customviews.BaseTextView
        android:id="@+id/ela_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:text="@string/About.site"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/ela_divider"
        app:layout_constraintLeft_toLeftOf="@id/ela_divider" />


    <ImageView
        android:id="@+id/site_share_button"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_share"
        app:layout_constraintBottom_toBottomOf="@+id/ela_text"
        app:layout_constraintRight_toRightOf="@+id/discord_divider"
        app:layout_constraintTop_toTopOf="@+id/ela_text" />

    <ImageView
        android:id="@+id/elastos_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_horizontal"
        android:src="@drawable/elastos_logo_white_bg"
        android:textColor="@color/white"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintTop_toTopOf="parent" />

    <com.breadwallet.presenter.customviews.BaseTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/About.title"
        android:textSize="@dimen/header"
        app:customTFont="BioSans-SemiBold.otf"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/ela_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="18dp"
        android:background="@color/extra_light_gray"
        app:layout_constraintBottom_toTopOf="@+id/cr_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/reddit_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="18dp"
        android:background="@color/extra_light_gray"
        app:layout_constraintBottom_toTopOf="@+id/telegram_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/telegram_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="24dp"
        android:background="@color/extra_light_gray"
        app:layout_constraintBottom_toTopOf="@+id/policy_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/discord_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="18dp"
        android:background="@color/extra_light_gray"
        app:layout_constraintBottom_toTopOf="@+id/reddit_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/cr_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="18dp"
        android:background="@color/extra_light_gray"
        app:layout_constraintBottom_toTopOf="@+id/discord_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.breadwallet.presenter.customviews.BaseTextView
        android:id="@+id/discord_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:text="@string/About.discord"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/discord_divider"
        app:layout_constraintLeft_toLeftOf="@+id/reddit_divider" />

    <com.breadwallet.presenter.customviews.BaseTextView
        android:id="@+id/cr_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:text="@string/About.cr"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/cr_divider"
        app:layout_constraintLeft_toLeftOf="@+id/reddit_divider" />

    <ImageView
        android:id="@+id/discord_share_button"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_share"
        app:layout_constraintBottom_toBottomOf="@+id/discord_text"
        app:layout_constraintRight_toRightOf="@+id/discord_divider"
        app:layout_constraintTop_toTopOf="@+id/discord_text" />

    <ImageView
        android:id="@+id/cr_share_button"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_share"
        app:layout_constraintBottom_toBottomOf="@+id/cr_text"
        app:layout_constraintRight_toRightOf="@+id/cr_divider"
        app:layout_constraintTop_toTopOf="@+id/cr_text" />

    <com.breadwallet.presenter.customviews.BaseTextView
        android:id="@+id/policy_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:alpha="0.8"
        android:text="@string/About.privacy"
        android:textColor="@color/dark_blue"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/info_text"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.breadwallet.presenter.customviews.BaseTextView
        android:id="@+id/info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="20dp"
        android:text="@string/About.footer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.breadwallet.presenter.customviews.BaseTextView
        android:id="@+id/reddit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:text="@string/About.reddit"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/reddit_divider"
        app:layout_constraintLeft_toLeftOf="@+id/reddit_divider" />

    <ImageView
        android:id="@+id/reddit_share_button"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_share"
        app:layout_constraintBottom_toBottomOf="@+id/reddit_text"
        app:layout_constraintRight_toRightOf="@+id/reddit_divider"
        app:layout_constraintTop_toTopOf="@+id/reddit_text" />

    <com.breadwallet.presenter.customviews.BaseTextView
        android:id="@+id/telegram_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:text="@string/About.telegram"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/telegram_divider"
        app:layout_constraintLeft_toLeftOf="@+id/telegram_divider" />

    <ImageView
        android:id="@+id/telegram_share_button"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_share"
        app:layout_constraintBottom_toBottomOf="@+id/telegram_text"
        app:layout_constraintRight_toRightOf="@+id/telegram_divider"
        app:layout_constraintTop_toTopOf="@+id/telegram_text" />

</android.support.constraint.ConstraintLayout>
